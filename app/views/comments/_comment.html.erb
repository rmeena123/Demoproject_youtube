
    <!-- <input  type="textbox" class= "comments">  -->
   <br>
   <b><%= @post.comments.count %> <font size="3">Comments</font></b>
   <%= form_tag comments_path, method: :post do %>
       <%= hidden_field_tag :post_id, @post.id %>
       <%= text_field_tag (:text)%>
       <%= submit_tag("comment",:class => "submit") %>
   <% end %>
   <% @post.comments.each do |comment| %>
       <%= comment.text %>
   <%  if comment.user.id == current_user.id %>
      <%= link_to 'Remove',  comments_path(post_id: @post), :method => :delete, 
      :class =>"rshift" %></br> 
     <%else%>
       </br> 
     <% end %>
   <% end %>
